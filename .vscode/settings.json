{
    "files.exclude": {
        "_site": true,
        ".sass-cache": true,
        "vendor/bundle": true,
        ".gemini": true,
        "_includes/navigation.html": true,
        "assets/css/style.css": true
    },
    "search.exclude": {
        "_site": true,
        ".sass-cache": true,
        "vendor/bundle": true,
        ".gemini": true,
        "_includes/navigation.html": true,
        "assets/css/style.css": true
    },
    "editor.formatOnSave": true,
    "files.associations": {
        "search.json": "liquid"
    },
    "github.copilot.chat.alwaysAllowToolUsage": true,
    "github.copilot.enable": {
        "*": true
    },
    "chat.experimental.tools.terminal.reuseTerminal": true,
    "chat.experimental.tools.terminal.preferredTerminal": "integrated",
    "terminal.integrated.defaultProfile.osx": "zsh",
    "terminal.integrated.profiles.osx": {
        "zsh": {
            "path": "zsh",
            "args": [
                "-l"
            ]
        }
    },
    "chat.experimental.tools.terminal.autoApprove": {
        "/.*/": true,
        "/sudo/": false,
        "/rm -rf \\//": false,
        "kill": false,
        "pkill": false
    }
}