# frozen_string_literal: true

source "https://rubygems.org"

# Jekyll 및 종속성
# vendor/bundle에 설치된 버전을 기반으로 지정합니다.
gem "jekyll", "3.10.0"

# _config.yml에 명시된 플러그인
gem "jekyll-seo-tag"
gem "jekyll-sitemap"

# 마크다운 파서 설정 (GFM 지원)
gem "kramdown-parser-gfm"

# 사이트 최적화 플러그인
gem "jekyll-lazy-load-image"
gem "jekyll-search", group: :jekyll_plugins

# Minima 테마는 gem 형태로 제공됩니다.
gem "minima", "~> 2.5"

# Ruby 3.4.0 이상에서 발생하는 경고 해결
gem "base64"
gem "bigdecimal"
